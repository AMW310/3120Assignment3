<%-include ../partials/header.ejs %>
<%-include ../partials/main_nav.ejs %>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the student's name"
                    name="name"
                    value="<%= Course.name%>"
                    required>
                </div>
                <div class="form-group">
                    <label for="ageTextField">Age</label>
                    <input type="text" class="form-control"
                    id="ageTextField"
                    placeholder="Enter the age of the student"
                    name="age" 
                    value="<%= Course.age%>"
                    required>
                </div>
                <div class="form-group">
                    <label for="majorTextField">Major</label>
                    <input type="text" class="form-control"
                    id="majorTextField"
                    placeholder="Enter the student's major"
                    name="major" 
                    value="<%= Course.major%>"
                    required>
                </div>
                <div class="form-group">
                    <label for="gpaTextField">GPA</label>
                    <input type="text" class="form-control"
                    id="gpaTextField"
                    placeholder="Enter the students GPA"
                    name="gpa" 
                    value="<%= Course.gpa%>"
                    required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>
                <a href="/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
<%- include ../partials/footer.ejs%>